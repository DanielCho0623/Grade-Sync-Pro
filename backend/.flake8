[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    migrations,
    instance,
    *.pyc,
    .pytest_cache
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by max-line-length)
max-complexity = 10
